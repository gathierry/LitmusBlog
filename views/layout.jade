mixin post(title, time, imgSrc, post)
  h1: a.text-warning(href='/blog/' + title)= title
  p
    span.glyphicon.glyphicon-time
    |  Posted on #{time}
  - if (imgSrc.length)
    hr
    img.img-responsive(src=imgSrc, width='400', height='100')
  hr
  div
    !{post}
    
mixin navBar(indexActive)
  - var titles = ['BLOG', 'LIST', 'ABOUT ME', 'CONTACT'];
  - var hrefs = ['/blog','/list', '/about-me', '/contact'];
  ul.nav.navbar-nav
    - each title, i in titles 
      - if (i == indexActive)
        li(class='active')
          a(href=hrefs[i])= titles[i]
      - else
        li
          a(href=hrefs[i])= titles[i]


