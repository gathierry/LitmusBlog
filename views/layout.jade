!!! transitional
html
  head
    meta(http-equiv='Content-Type', content='text/html; charset=utf-8')
    script(src='/javascripts/jquery.js')
    script(src='/javascripts/bootstrap.js')
    script(charset='utf-8', src='/editor/kindeditor-min.js')
    script(charset='utf-8', src='/editor/lang/zh_CN.js')
    script
      var editor; KindEditor.ready(function(K) { editor = K.create('#editor_id'); });
    link(rel='stylesheet', type='text/css', href='/stylesheets/bootstrap.css')
    link(rel='stylesheet', type='txt/css', href='/stylesheets/bootstrap-responsive.css')
    style
      body{padding-left:30px;padding-right:30px;padding-top:20px;padding-bottom:40px;}
    title=title
  body
    div.navbar.navbar-inverse
      div.navbar-inner
        div.continer
          a.brand(href='/') Litmus Blog
          a.btn.btn-navbar(data-toggle='collapse', data-target='.nav-collapse')
            span.icon-bar
            span.icon-bar
            span.icon-bar
          div.nav-collapse
            block nav

    div#container.container-fluid
      div.row-fluid
        div.span3
          div.well
            - var lastTime
            each timeline in timelines
              if (timeline.time != lastTime)
                h4= timeline.time
              p: a(href='/blog/' + timeline.title)= timeline.title
              lastTime = timeline.time
        block content
    
    hr
    footer
      p Copyright Â© 2013 Litmus.
      p Made in Beijing