extends layout

block nav
  +navBar(1)

block content
  - each post, i in posts
    if (i < (posts.length-1))
      +post(post.title, post.time, post.post)
      a.btn.btn-primary.btn-xs(href='/blog/' + title)
        | Read More
        span.glyphicon.glyphicon-chevron-right
    hr
  div
    ul.pager
      - if(page-1)
        li.previous
          a(title='last page', href='?p=' + (page-1) ) &larr;
      - if(postsLen==21)
        li.next
          a(title='next page', href='?p=' + (page+1)) &rarr;
            
//
  - var lastTime
    each post,i in posts
      if (i != 20)
        if (post.time != lastTime)
          h3= post.time
        li
          h4: a.text-warning(href='/blog/' + post.title)= post.title
        lastTime = post.time