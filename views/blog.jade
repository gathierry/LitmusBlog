extends layout

block nav
  ul.nav.navbar-nav
    li
      a(href='/') Home
  ul.nav.navbar-nav
    li(class='active')
      a(href='/blog') Blog

block content
  div.span9
    - var lastTime
    each post,i in posts
      if (i != 20)
        if (post.time != lastTime)
          h3= post.time
        li
          h4: a(href='/blog/' + post.title)= post.title
        lastTime = post.time

    div
      ul.pager
        if(page-1)
          li.previous
            a(title='last page', href='?p=' + (page-1) ) &larr;
        if(postsLen==21)
          li.next
            a(title='next page', href='?p=' + (page+1)) &rarr;